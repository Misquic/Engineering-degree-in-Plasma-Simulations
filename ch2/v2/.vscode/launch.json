{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main.exe", 
            "args": ["g"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "miDebuggerArgs": "",
            "targetArchitecture": "x64",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true,
                "exceptions": true
            }
        }
    ]
}
